generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id     Int     @id @default(autoincrement())
  email  String  @unique
  name   String?
  tweets tweet[]
}

model tweet {
  id        Int      @id @default(autoincrement())
  userid    Int
  content   String
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userid], references: [id])
}
